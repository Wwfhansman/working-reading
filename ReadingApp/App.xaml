<Application x:Class="ReadingApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ReadingApp"
             xmlns:converters="clr-namespace:ReadingApp.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <converters:BooleanInvertConverter x:Key="BooleanInvertConverter"/>
        <converters:VisibilityToBrushConverter x:Key="VisibilityToBrushConverter"/>
        <converters:VisibilityToForegroundConverter x:Key="VisibilityToForegroundConverter"/>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Application.Resources>
</Application> 